    xmlns:model="using:PRPR.ExReader.Models"
    
    xmlns:Converters="using:PRPR.ExReader.Converters"
    x:Class="PRPR.ExReader.Views.GalleryPage"
    mc:Ignorable="d"
    NavigationCacheMode="Required"
    RequestedTheme="Dark"
    Loaded="CurrentGalleryPage_Loaded"
